--(TOP_Revive_Script)--
--(By: helpguestslikeme)--
--(Version 2.1)--

game:GetService("StarterGui"):SetCore("SendNotification", {
	Title = "Bella's Power";
	Text = "Press J";
})

local lplr = game:GetService("Players").LocalPlayer
local mouse = lplr:GetMouse()

mouse.KeyDown:connect(function(key)
    if key == "j" then
    wait(.5)    game:GetService("TweenService"):Create(lplr.Character.HumanoidRootPart, TweenInfo.new(0.3, Enum.EasingStyle.Linear), {CFrame = CFrame.new(100, 100, 100)}):Play()
    end
    end)

mouse.KeyDown:connect(function(key)
    if key == "j" then
        local action = lplr.Character.SuperAction
        action:Destroy()
    end
    end)
